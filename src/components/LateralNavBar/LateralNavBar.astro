---
import './styles.css'
import { topInfoNavBarButtons, bottomInfoNavBarButtons } from './content';

---

<nav class="NavBar">
    <ul>
        {
            topInfoNavBarButtons.map(element => (
                <li class="NavBarElement">
                    <a href="" set:html={element.svg}>
                        <span set:html={element.hoverText}></span>
                    </a>
                </li>
            ))
        }
    </ul>
    <ul>
        {
            bottomInfoNavBarButtons.map(element => (
                <li class="NavBarElement">
                    <a href={element.href} set:html={element.svg} target='blank'>
                        <span set:html={element.hoverText}></span>
                    </a>
                </li>
            ))
        }
    </ul>
</nav>