---
import './styles.css'

interface Props {
	linesNumber: number;
}

const {linesNumber } = Astro.props;

const numbers = Array.from({ length: linesNumber }, (_, i) => i + 1);

---

<section class="contentDisplaySection">
    <div class="content">
        <div class="lineNumbers">
            {numbers.map((number) => (
                <div>{number}</div>
            ))}
        </div>
        <div class="contentSection">
            <slot/>
        </div>
    </div>
</section>